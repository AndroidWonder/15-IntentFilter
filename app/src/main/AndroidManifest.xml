<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.course.intentfilter"
    android:versionCode="1"
    android:versionName="1.0" >

    <application
        android:icon="@drawable/icon"
        android:label="@string/app_name" >
        
        <!-- Main activity -->
        <activity
            android:name=".IntentFilter"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <!-- Options activity, action specified, no data specified -->
        <activity android:name=".OptionsMenu" android:label="@string/options"
            android:icon="@drawable/android">
            <intent-filter>
                <category android:name="android.intent.category.DEFAULT" />

                <action
                    android:name="ACTION_CS402"
                     />
            </intent-filter>
        </activity>
        
        <!-- Context activity, handles sms data for specified action-->
        <activity android:name=".Contextmenu"  android:label="@string/context"
            android:icon="@drawable/robot">
            <intent-filter>
                <category android:name="android.intent.category.DEFAULT" />

                <action
                    android:name="ACTION_CS402"
                    />
               <data android:scheme="sms" />
            </intent-filter>
        </activity>
    </application>

    <uses-sdk
        android:minSdkVersion="17"
        android:targetSdkVersion="25" />

</manifest>